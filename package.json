{
  "name": "hayati-app",
  "productName": "حياتي - Hayati",
  "version": "1.0.0",
  "description": "حياتي - تطبيق سطح المكتب لإدارة الحياة باللغة العربية | Hayati - Arabic Life Management Desktop App",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && copy src\\main\\preload.js dist\\main\\main\\preload.js && cross-env NODE_ENV=development electron dist/main/main/main.js",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json && copy src\\main\\preload.js dist\\main\\main\\preload.js",
    "build:renderer": "vite build",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:portable": "npm run build && electron-builder --win portable",
    "package:installer": "npm run build && electron-builder --win nsis",
    "package:all": "npm run build && electron-builder --win --mac --linux",
    "dist": "npm run package:win",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "life-management",
    "arabic"
  ],
  "author": "Moaz Mohamed <moazmo>",
  "license": "MIT",
  "homepage": "https://github.com/moazmo/hayati",
  "repository": {
    "type": "git",
    "url": "https://github.com/moazmo/hayati.git"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "@types/styled-components": "^5.1.34",
    "adhan": "^4.4.2",
    "better-sqlite3": "^12.2.0",
    "date-fns": "^3.3.1",
    "i18next": "^23.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "react-icons": "^5.0.1",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.1",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.8"
  },
  "build": {
    "appId": "com.moazmo.hayati",
    "productName": "حياتي - Hayati",
    "copyright": "Copyright © 2024 Moaz Mohamed. All rights reserved.",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.{md,txt,map}",
      "!node_modules/**/test/**",
      "!node_modules/**/docs/**"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "electronDownload": {
      "cache": null
    },
    "compression": "normal",
    "forceCodeSigning": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "verifyUpdateCodeSignature": false,
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "حياتي - Hayati",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Productivity",
      "differentialPackage": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "publish": null
  }
}
