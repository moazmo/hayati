{
  "name": "hayati-app",
  "productName": "حياتي - Hayati",
  "version": "1.0.0",
  "description": "حياتي - تطبيق سطح المكتب لإدارة الحياة باللغة العربية | Hayati - Arabic Life Management Desktop App",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && copy src\\main\\preload.js dist\\main\\main\\preload.js && cross-env NODE_ENV=development electron dist/main/main/main.js",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json && copy src\\main\\preload.js dist\\main\\main\\preload.js",
    "build:renderer": "vite build",
    "package": "electron-builder",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "life-management",
    "arabic"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^29.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "@types/styled-components": "^5.1.34",
    "adhan": "^4.4.2",
    "date-fns": "^3.3.1",
    "i18next": "^23.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "react-icons": "^5.0.1",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.1",
    "sqlite3": "^5.1.6",
    "styled-components": "^6.1.8"
  },
  "build": {
    "appId": "com.yourcompany.life-management-app",
    "productName": "Life Management App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
